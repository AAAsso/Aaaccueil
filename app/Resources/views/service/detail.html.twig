    {% extends 'base.html.twig' %}

    {% block body %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="/">AAAccueil</a></li>
            <li><a href="{{ path('service_liste') }}">Services</a></li>
            <li class="active">{{ service.id }} TODO: modifier "id"</li>
        </ol>

        <h1>Service</h1>

        <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>{{ service.id }}</dd>
            <dt>Label</dt>
            <dd>{{ service.label }}</dd>
            <dt>Slug</dt>
            <dd>{{ service.slug }}</dd>
            <dt>Url</dt>
            <dd>{{ service.url }}</dd>
            <dt>Datecreation</dt>
            <dd>{% if service.dateCreation %}{{ service.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</dd>
            <dt>Estsuraccueil</dt>
            <dd>{% if service.estSurAccueil %}Yes{% else %}No{% endif %}</dd>        </dl>
    </div>
        <div class="col-md-6">
    <button class="btn btn-danger" data-toggle="modal" data-target="#modal-service-id"><span class="glyphicon glyphicon-trash"></span> Supprimer le service TODO : vérifier (le/la/l')</button>
</div><div class="col-md-6 text-right">
    <a href="{{ path('service_editer', { 'id': service.id }) }}" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span> Éditer service</a>
</div<div id="modal-confirmation-suppression">
    <div id="modal-service-id" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <p>Voulez-vous supprimer le service TODO: ajouter label ?</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer text-left">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-chevron-left"></span> Annuler</button>
                        </div>
                        <div class="col-md-6 text-right">
                            {{ form_start(form_supprimer) }}
                            <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-trash"></span> Confirmer la suppression</button>
                            {{ form_end(form_supprimer) }}
                        </div>
                    </div>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>{% endblock %}
