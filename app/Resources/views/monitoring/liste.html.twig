    {% extends 'base.html.twig' %}

    {% block body %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="/">AAAccueil</a></li>
            <li class="active">Monitorings</li>
        </ol>
        <h1>Monitorings</h1>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-6 text-right">
        <a href="{{ path('monitoring_nouveau') }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Publier une nouvelle/un nouveau monitoring TODO</a>
    </div>
    <div class="col-md-12">
        <table class="table table-hover aaa-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Label</th>
                    <th>Slug</th>
                    <th>Description</th>
                    <th>Datecreation</th>                    <th class="aaa-action"></th>
                    <th class="aaa-action"></th>
                </tr>
            </thead>
            <tbody>
                {% for monitoring in monitorings %}
                <tr>
                    <td><a href="{{ path('monitoring_detail', { 'id': monitoring.id }) }}">{{ monitoring.id }}</a></td>
                    <td>{{ monitoring.label }}</td>
                    <td>{{ monitoring.slug }}</td>
                    <td>{{ monitoring.description }}</td>
                    <td>{% if monitoring.dateCreation %}{{ monitoring.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td><a href="{{ path('monitoring_editer', { 'id': monitoring.id }) }}" class="btn btn-default" title="Ã‰diter l'monitoring"><span class="glyphicon glyphicon-edit"></span></a></td>
                    <td><button class="btn btn-danger" data-toggle="modal" data-target="#modal-monitoring-id" title="Supprimer l'monitoring"><span class="glyphicon glyphicon-trash"></span></button></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="col-md-6"></div>
        <div class="col-md-6 text-right">
            <a href="{{ path('monitoring_nouveau') }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Publier une nouvelle/un nouveau monitoring TODO</a>
        </div>        <div id="modals-confirmation-suppression">
            {% for monitoring in monitorings %}
            {% set form_supprimer = forms_supprimer[monitoring.id] %}
            <div id="modal-monitoring-id" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Voulez-vous supprimer le/la/l' monitoring TODO: ajouter label ?</p>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer text-left">
                            <div class="row">
                                <div class="col-md-6 text-left">
                                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-chevron-left"></span> Annuler</button>
                                </div>
                                <div class="col-md-6 text-right">
                                    {{ form_start(form_supprimer) }}
                                    <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-trash"></span> Confirmer la suppression</button>
                                    {{ form_end(form_supprimer) }}
                                </div>
                            </div>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
            {% endfor %}
        </div>
        {% endblock %}
