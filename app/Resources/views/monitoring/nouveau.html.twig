    {% extends 'base.html.twig' %}

    {% block title %}Nouveau monitoring{% endblock %}
    
    {% block body %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="/">AAAccueil</a></li>
            <li><a href="{{ path('monitoring_liste') }}">Monitorings</a></li>
            <li class="active">Créer un nouveau monitoring</li>
        </ol>

        <h1>Créer un nouveau monitoring</h1>
    </div>
    <div class="col-md-12">
        {{ form_start(form, {'attr': {'id': 'form_publier_monitoring'}}) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-6 text-right">
        <a href="{{ path('monitoring_liste') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Annuler la publication</a>
        <button class="btn btn-primary" form="form_publier_monitoring"><span class="glyphicon glyphicon-ok"></span> Créer le monitoring </button>
    </div>
    {% endblock %}
