{% extends 'base.html.twig' %}

{% block title %}{{ annonce.titre }}{% endblock %}

{% block body %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="/">AAAccueil</a></li>
            <li><a href="{{ path('annonce_liste') }}">Annonces</a></li>
            <li class="active">{{ annonce.titre }}</li>
        </ol>

        <h1>Annonce</h1>

        <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>{{ annonce.id }}</dd>
            <dt>Slug</dt>
            <dd>{{ annonce.slug }}</dd>
            <dt>A été créé le</dt>
            <dd>{% if annonce.dateCreation %}{{ annonce.dateCreation|date('d F Y à H:i') }}{% endif %}</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Titre</dt>
            <dd>{{ annonce.titre }}</dd>
            <dt>Sera publiée le</dt>
            <dd>{% if annonce.datePublication %}{{ annonce.datePublication|date('d F Y à H:i') }}{% endif %}</dd>
            <dt>Contenu</dt>
            <dd>{{ annonce.contenu }}</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Visibilité</dt>
            <dd>{% if annonce.estPublic %}Publique{% else %}Privée{% endif %}</dd>
        </dl>
    </div>
    <div class="col-md-6">
        {{ form_start(form_supprimer) }}
            <button class="btn btn-danger" type="submit" ><span class="glyphicon glyphicon-trash"></span> Supprimer l'annonce</button>
        {{ form_end(form_supprimer) }}
    </div>
    <div class="col-md-6 text-right">
        <a href="{{ path('annonce_editer', { 'slug': annonce.slug }) }}" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span> Éditer l'annonce</a>
    </div>
{% endblock %}
