{% for application in applications %}
    <li class="text-center">
        <p>
            <a href="{{ path('application_detail', {'slug': application.slug}) }}">{{ application.label }}</a>
            {% if application.urlDirecte %}
                <a href="{{ application.urlDirecte }}"><span class="glyphicon glyphicon-link"></span></a>
            {% endif %}
        </p>
    </li>
{% endfor %}