{% extends 'base.html.twig' %}

{% block title %}Nouvelle application{% endblock %}

{% block body %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="/">AAAccueil</a></li>
            <li><a href="{{ path('application_liste') }}">Applications</a></li>
            <li class="active">Répertorier une nouvelle application</li>
        </ol>

        <h1>Répertorier une nouvelle application</h1>
    </div>
    <div class="col-md-12">
        {{ form_start(form, {'attr': {'id': 'form_repertorier_application'}}) }}
            {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-6 text-right">
        <a href="{{ path('application_liste') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Annuler</a>
        <button class="btn btn-primary" form="form_repertorier_application"><span class="glyphicon glyphicon-ok"></span> Répertorier l'application</button>
    </div>
{% endblock %}
